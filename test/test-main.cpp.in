#include <iostream>

#include "test/testing.h"

#define EJECUTABLE_A_TESTEAR "${EJECUTABLE_A_TESTEAR}"

${TEST_INCLUDES}

/**
 * Ejecuta las pruebas unitarias.
 * 
 * Código de error devuelto: 0 si todas las pruebas pasaron, 1 si alguna falló.
 */
int main(int argc, char *argv[]) {
    std::cerr << "Testeando: " EJECUTABLE_A_TESTEAR << std::endl;
    if (!Testing::obtener_instancia().correr_tests()) {
        std::cerr << "ERROR: Hubo pruebas fallidas. Ver stderr." << std::endl;
        return 1;
    }
    std::cerr << "OK: Todas las pruebas pasaron." << std::endl;
    return 0;
}
